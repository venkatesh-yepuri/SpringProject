<?xml version="1.0" encoding="UTF-8"?>
  <!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>
	<class name="com.salambc.model.User" table="usertable">

		<id name="userId" column="userId">
			<generator class="increment" />
		</id>
		<property name="firstName" column="firstName" />
		<property name="lastName" column="lastName" />
		<property name="permaLink" column="permaLink" />
		<property name="emailId" column="emailId" />
		<!-- <set name="phones" table="PHONE_NUMBERS" cascade="all"> <key column="UNID" 
			/> <one-to-many class="com.salambc.model.PhoneNumber" /> </set> -->
	</class>
</hibernate-mapping>

